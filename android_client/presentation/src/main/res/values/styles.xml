<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="TitleTextStyle" parent="TextAppearance.AppCompat.Title" />
    <style name="EmptyTitleTextStyle" parent="TextAppearance.AppCompat.Title" >
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="AdditionalTextStyle" parent="TextAppearance.AppCompat.Caption" />

    <style name="DividerItemStyle">
        <item name="android:background">@color/lightGray</item>
    </style>


    <style name="SemiTransparentInput">
        <item name="cardBackgroundColor">@color/semitransparent</item>
        <item name="backgroundTint">@color/semitransparent</item>
    </style>

    <style name="Login">
        <item name="cardBackgroundColor">@color/semitransparent</item>
        <item name="backgroundTint">@color/semitransparent</item>
    </style>

    <style name="Login.Input">
        <item name="cardCornerRadius">24dp</item>
        <item name="contentPaddingBottom">2dp</item>
        <item name="contentPaddingTop">4dp</item>
        <item name="contentPaddingLeft">12dp</item>
        <item name="contentPaddingRight">12dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="Login.Shadow">
        <item name="android:shadowColor">@color/colorTextPrimary</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
    </style>

    <style name="Login.Shadow.Button">
        <item name="cornerRadius">24dp</item>
        <item name="android:textColor">@color/colorAccentDark</item>
    </style>

    <style name="Login.Shadow.Link">
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:textColor">@color/colorAccentDark</item>
    </style>


    <style name="HomeServer">
    </style>

    <style name="HomeServer.Title">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="HomeServer.Item">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

</resources>
