<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="preferenceTheme">@style/HomeSettings</item>
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
        <item name="textColorEmpty">@color/colorTextEmpty</item>
    </style>

    <style name="HomeSettings" parent="@style/PreferenceThemeOverlay.v14.Material">
        <item name="android:tint">@color/colorAccent</item>
    </style>

    <style name="TitleTextStyle" parent="TextAppearance.AppCompat.Title" />
    <style name="EmptyTitleTextStyle" parent="TextAppearance.AppCompat.Title" >
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="AdditionalTextStyle" parent="TextAppearance.AppCompat.Caption" />
    <style name="AdditionalTextStyle.Bold">
        <item name="android:textFontWeight" tools:ignore="NewApi">700</item>
    </style>

    <style name="DividerItemStyle">
        <item name="android:background">@color/lightGray</item>
    </style>


    <style name="SemiTransparentInput">
        <item name="cardBackgroundColor">@color/semitransparent</item>
        <item name="backgroundTint">@color/semitransparent</item>
    </style>

    <style name="Login">
        <item name="cardBackgroundColor">@color/semitransparent</item>
        <item name="backgroundTint">@color/semitransparent</item>
    </style>

    <style name="Login.Input">
        <item name="cardCornerRadius">24dp</item>
        <item name="contentPaddingBottom">2dp</item>
        <item name="contentPaddingTop">4dp</item>
        <item name="contentPaddingLeft">12dp</item>
        <item name="contentPaddingRight">12dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="Login.Shadow">
        <item name="android:shadowColor">@color/colorTextPrimary</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
    </style>

    <style name="Login.Shadow.Button">
        <item name="cornerRadius">24dp</item>
        <item name="android:textColor">@color/colorAccentDark</item>
    </style>

    <style name="Login.Shadow.Link">
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:textColor">@color/colorAccentDark</item>
    </style>


    <style name="HomeServer">
    </style>

    <style name="HomeServer.Title">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="HomeServer.Item">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="WeekdaySelector" />
    <style name="WeekdaySelector.Item">
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="SetupDependency" />
    <style name="SetupDependency.Title" parent="TitleTextStyle" >
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="SetupDependency.DependencyUnitContainer">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="SetupDependency.DependencyUnit">
        <item name="cardBackgroundColor">#E8E8E8</item>
        <item name="android:minHeight">80dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="contentPadding">8dp</item>
        <item name="cardElevation">0dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingStart">12dp</item>
    </style>


    <style name="Graph">

    </style>

    <style name="Graph.Block">
        <item name="cardCornerRadius">7dp</item>
    </style>
</resources>
